		$(MEDNAFEN_DIR)/state.cpp \
		$(MEDNAFEN_DIR)/mempatcher.cpp \
		$(MEDNAFEN_DIR)/sound/okiadpcm.cpp \
		$(MEDNAFEN_DIR)/sound/OwlResampler.cpp

	SOURCES_C += \
		$(MEDNAFEN_DIR)/file.c \
		$(MEDNAFEN_DIR)/mednafen-endian.c \
		$(MEDNAFEN_DIR)/cputest/cputest.c
endif

